<Window x:Class="TicTacToeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeGame"
        mc:Ignorable="d"
        Title="Tic Tac Toe Menu" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <ComboBox x:Name="BoardSizeComboBox" Width="150" Margin="10">
                <ComboBoxItem Content="3x3" IsSelected="True"/>
                <ComboBoxItem Content="4x4"/>
                <ComboBoxItem Content="5x5"/>
            </ComboBox>
            <Button Content="Play With AI" Click="PlayWithAI_Click" Margin="10"/>
            <Button Content="Play With Friend" Click="PlayWithFriend_Click" Margin="10"/>
            <Button Content="Register" Click="RegisterButton_Click" Margin="10"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="10"/>
            <TextBlock x:Name="WelcomeTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>


