<Window x:Class="TicTacToeGame.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Registration" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Username:"/>
            <TextBox x:Name="UsernameTextBox" Margin="10"/>
            <Label Content="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="10"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="10"/>
            <Button Content="Register" Click="RegisterButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
